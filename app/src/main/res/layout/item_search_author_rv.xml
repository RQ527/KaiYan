<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp"
    android:layout_marginHorizontal="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_rvItemSearchActivityAuthor_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="作者"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_rvItemSearchActivityAuthor_header"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_launcher_background"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@+id/tv_rvItemSearchActivityAuthor_type"
        app:layout_constraintTop_toBottomOf="@+id/tv_rvItemSearchActivityAuthor_type"
        app:shapeAppearance="@style/CircleStyle" />

    <TextView
        android:id="@+id/tv_rvItemSearchActivityAuthor_name"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="冉思祥是帅哥"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/iv_rvItemSearchActivityAuthor_header"
        app:layout_constraintTop_toTopOf="@+id/iv_rvItemSearchActivityAuthor_header" />

    <TextView
        android:id="@+id/tv_rvItemSearchActivityAuthor_description"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="冉思祥是帅哥"
        android:layout_marginTop="5dp"
        android:textSize="12sp"
        android:maxLines="2"
        android:ellipsize="end"
        app:layout_constraintEnd_toEndOf="@id/tv_rvItemSearchActivityAuthor_name"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/tv_rvItemSearchActivityAuthor_name"
        app:layout_constraintTop_toBottomOf="@id/tv_rvItemSearchActivityAuthor_name" />

</androidx.constraintlayout.widget.ConstraintLayout>