<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingHorizontal="16dp"
    android:paddingVertical="8dp"
    app:layout_scrollFlags="scroll">

    <TextView
        android:id="@+id/tv_playVideo_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="这是视频的标题"
        android:textColor="@color/white"
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_playVideo_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="这里是视频的标签"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_playVideo_title" />


    <TextView
        android:id="@+id/tv_playVideo_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="这里是视频的描述"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/tv_playVideo_subtitle"
        tools:layout_editor_absoluteX="-16dp" />

    <TextView
        android:id="@+id/tv_playVideo_agree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:paddingStart="0dp"
        android:text="121"
        android:textColor="@color/white"
        app:drawableLeftCompat="@drawable/agree"
        app:layout_constraintStart_toStartOf="@+id/tv_playVideo_description"
        app:layout_constraintTop_toBottomOf="@+id/tv_playVideo_description"
        tools:ignore="RtlSymmetry" />

    <TextView
        android:id="@+id/tv_playVideo_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="62dp"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/share"
        android:text="121"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@+id/tv_playVideo_agree"
        app:layout_constraintTop_toBottomOf="@+id/tv_playVideo_description" />

    <TextView
        android:id="@+id/tv_playVideo_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="62dp"
        android:layout_marginTop="10dp"
        android:text="121"
        android:textColor="@color/white"
        app:drawableLeftCompat="@drawable/comment"
        app:layout_constraintStart_toEndOf="@+id/tv_playVideo_share"
        app:layout_constraintTop_toBottomOf="@+id/tv_playVideo_description" />


</androidx.constraintlayout.widget.ConstraintLayout>